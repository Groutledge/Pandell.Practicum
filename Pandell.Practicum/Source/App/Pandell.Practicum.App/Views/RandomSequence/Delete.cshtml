@model RandomSequenceModel

@{
    ViewBag.Title = "Delete";
    Layout = "_Layout";
}

<h2>Delete a Saved Random Sequence</h2>
<h4>Are you sure you want to delete this Item?</h4>
<div>
    <div class="col-sm-2">
        <div class="small">
            <b>@Html.DisplayNameFor(model => model.Id)</b>
            @Html.DisplayFor(model => model.Id)
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/><br/>
        <a asp-action="Index">Back to All Random Sequences</a>
    </form>
</div>
